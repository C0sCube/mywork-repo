FROM python:3.10-slim

# Install system dependencies required by camelot-py[cv] and OCR
RUN apt-get update && apt-get install -y \
    ghostscript \
    poppler-utils \
    python3-tk \
    libglib2.0-0 \
    libsm6 \
    libxrender1 \
    libxext6 \
    tesseract-ocr \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

CMD ["python", "main.py"]
